{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "cluster": {
            "type": "object",
            "properties": {
                "calico": {
                    "type": "object",
                    "properties": {
                        "CIDR": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "controller": {
            "type": "object",
            "properties": {
                "azureCredentialFile": {
                    "type": "string"
                },
                "controlPlaneNodeSelector": {
                    "type": "object",
                    "properties": {
                        "kubernetes.io/role": {
                            "type": "string"
                        }
                    }
                },
                "kubeconfigFromHost": {
                    "type": "boolean"
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "name": {
            "type": "string"
        },
        "ports": {
            "type": "object",
            "properties": {
                "healthcheck": {
                    "type": "integer"
                }
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "serviceType": {
            "type": "string"
        },
        "test": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "verticalPodAutoscaler": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    }
}
